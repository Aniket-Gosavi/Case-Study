package com.aniket.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Service;

import com.aniket.exception.ResourceNotFoundException;
import com.aniket.model.TrainDetails;
import com.aniket.repository.TrainRepo;

@Service
public class TrainService implements TrainServiceImpl{
	
	@Autowired
	private TrainRepo trepo;

	@Override
	public TrainDetails addTrain(TrainDetails td) {
		TrainDetails save = trepo.save(td);
		return save;
	}

	@Override
	public List<TrainDetails> showTrains() {
		return trepo.findAll();
	}

	@Override
	public TrainDetails updateTrain(int trainNo, String destination) throws ResourceNotFoundException {
		 TrainDetails id = trepo.findById(trainNo)
		 .orElseThrow(() - > new ResourceNotFoundException("Employee not found for this id :: " + trainNo));
		return null;
	}

}
